{
  "name": "Workflow N8N para Verificação WhatsApp",
  "nodes": [
    {
      "parameters": {
        "path": "webhook-test/whatsapp",
        "httpMethod": "POST",
        "responseMode": "responseNode",
        "options": {}
      },
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [240, 300],
      "id": "1"
    },
    {
      "parameters": {
        "functionCode": "const code = Math.floor(100000 + Math.random() * 900000).toString();\nconst expiresAt = new Date(Date.now() + 10 * 60 * 1000).toISOString();\nreturn { code, expiresAt };"
      },
      "name": "Function Gerar Código",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [460, 300],
      "id": "2"
    },
    {
      "parameters": {
        "operation": "insert",
        "table": "phone_verifications",
        "columns": "phone_number,token,expires_at",
        "values": "={{ $json.phone }},={{ $node[\"Function Gerar Código\"].json.code }},={{ $node[\"Function Gerar Código\"].json.expiresAt }}"
      },
      "name": "Supabase Insert",
      "type": "n8n-nodes-base.supabase",
      "typeVersion": 1,
      "position": [680, 300],
      "id": "3"
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://192.168.100.23:5678/api/sendText",
        "sendHeaders": true,
        "headerParameters": {
          "Content-Type": "application/json"
        },
        "sendBody": true,
        "bodyParameters": {
          "chatId": "={{ $json.phone }}@c.us",
          "text": "Seu código de verificação é: {{ $node[\"Function Gerar Código\"].json.code }}\\n\\nDigite este código para confirmar seu número."
        }
      },
      "name": "HTTP Request Enviar WhatsApp",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [900, 300],
      "id": "4"
