        "url": "http://192.168.100.23:5678/api/sendText",
        "sendBody": true,
        "bodyParameters": {
          "chatId": "={{ $json.verification.phone_number }}@c.us",
          "text": "✅ Número verificado com sucesso! Seu agendamento foi confirmado."
        }
      },
      "name": "HTTP Request Confirmação WhatsApp",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [1780, 600],
      "id": "13"
    }
